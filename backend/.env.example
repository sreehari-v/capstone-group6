# Example environment variables for CareOn backend

# Server
PORT=5000

# MongoDB
MONGO_URI="mongodb+srv://<DB_USER>:<DB_PASS>@cluster.example.mongodb.net/careonDB"

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_MS=604800000

# Email verification expiry
EMAIL_VERIFY_EXPIRES_IN=1d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Local dev redirect (uncomment for local testing with OAuth)
# GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Production redirect (set to your production frontend domain)
# If your backend is hosted elsewhere, this should point to the backend callback that then redirects to the frontend.
GOOGLE_REDIRECT_URI=https://creon-frontend.onrender.com/api/auth/google/callback

# Frontend origin
# Local dev: uncomment if you run the frontend on localhost
# FRONTEND_URL=http://localhost:5173

# Production: set to your deployed SPA origin
FRONTEND_URL=https://creon-frontend.onrender.com

# SMTP (mail delivery) - use a dedicated account and rotate credentials
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=no-reply@example.com

# NODE_ENV: leave commented for local dev; set to 'production' on the server
# NODE_ENV=development
# NODE_ENV=production
